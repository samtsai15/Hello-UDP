{
    "env": {
        "browser": true,
        "node": true
    },
    "extends": ["eslint:recommended", "airbnb"],
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "no-console": "off",
        "space-infix-ops": ["error", { "int32Hint": false }],
        "arrow-body-style": ["error", "always"]
    }
}
